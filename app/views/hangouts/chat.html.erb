<div id="chat-room">
  <div id="message-display">
    <% @messages.each do |message| %>
      <article class="message">
        <div class="message-header">
          <%= message.user.email %>
        </div>
        <div class="message-body">
          <%= message.body %>
        </div>
      </article>
    <% end %>
  </div>
  <%= form_with(model: @message, local: false, id: "message-form") do |f| %>
    <div class="field has-addons">
      <div class="control">
        <%= f.text_field :body, class: "input", id: "message-input" %>
      </div>
      <div class="control">
        <%= f.submit 'Send Message', class: 'button is-primary' %>
      </div>
    </div>
  <% end %>
</div>